<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar navbar-expand-lg" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      </div>
      <div class="collapse navbar-collapse justify-content-end">
        <ul class="navbar-nav">
          <% if (username) { %>
          <li class="nav-item">
            <h5 style="margin-top: 0.5rem; margin-right: 0.5em">Logged in as <%= username %></h5>
          </li>
          <li class="nav-item">
            <form method="POST" action="/logout" class="form-inline my-2 my-lg-0">
              <input type="hidden" name="username" value="<%= username %>">
              <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Logout</button>
            </form>
          </li>
            <% } else { %>  
          <li class="nav-item">
            <form method="POST" action="/login" class="form-inline my-2 my-lg-0">
              <input class="form-control mr-sm-2" name="username" placeholder="Username">
              <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Login</button>
            </form>
          </li>
          <% } %> 
        </ul>
      </div>
      </nav>
      </header>